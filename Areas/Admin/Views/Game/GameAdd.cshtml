@model DVDShops.Models.Game;
@inject DVDShops.Services.Producers.IProducerService producerService
@inject DVDShops.Services.Genres.IGenreService genreService

@{
    ViewData["Title"] = "Game Manage";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

@section tableheader {
    <link rel="stylesheet" href="~/admin/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/admin/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <link rel="stylesheet" href="~/admin/plugins/bootstrap4-duallistbox/bootstrap-duallistbox.min.css">
}

<!-- Content -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 id="title">Game Song</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="admin" asp-controller="game" asp-action="view">Back</a>
                    </li>
                    <li class="breadcrumb-item active">Games</li>
                </ol>
            </div>
        </div>
    </div>
    <!-- /.container-fluid -->
</section>

<!-- /.add-album -->
<section class="content-header">
    <div class="container-fluid">
        <div class="col-lg-10 col-12 mx-auto">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Game Profile</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" asp-area="admin" asp-controller="game" asp-action="addGame">
                    <div class="card-body">
                        <div class="row form-group">
                            <label for="name">Game Title</label>
                            <input type="text" class="form-control" asp-for="GameTitle" placeholder="Enter Title..." required>
                        </div>
                        <div class="row form-group">
                            <label for="name">Introduction</label>
                            <textarea type="text" class="form-control" asp-for="GameDescription" placeholder="Enter Description..." required> </textarea>
                        </div>
                        <!-- Add Genres -->
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group mb-0">
                                    <label>Game Genres</label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12 col-xl-10 mx-auto">
                                <div class="form-group">
                                    <select class="duallistbox" multiple="multiple" name="genres">
                                        @foreach (var genre in genreService.GetAll())
                                        {
                                            <option value="@genre.GenreId">@genre.GenreName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- /.producer col -->
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label>Producer</label>
                                    <select class="form-control select2bs4" style="width: 100%;" asp-for="ProducerId">
                                        <option selected="selected" value="-1" class="form-control">Select a Producer</option>
                                        @foreach (var producer in producerService.GetAll())
                                        {
                                            <option value="@producer.ProducerId" class="form-control">@producer.ProducerName</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label>Trailer link</label>
                                    <div class="form-group">
                                        <input type="text" asp-for="GameTrailer" class="form-control" required/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="form-group">
                                    <label>download link</label>
                                    <div class="form-group">
                                        <input type="text" asp-for="DownloadLink" class="form-control" required/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer d-flex justify-content-end">
                        <a class="btn btn-warning" asp-area="admin" asp-controller="game" asp-action="view" onclick="return confirm('Are you Sure?')">CANCLE</a> &nbsp;
                        <button type="submit" class="btn btn-info">ADD</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@section tablefooter {
    <!-- Select2 -->
    <script src="~/admin/plugins/select2/js/select2.full.min.js"></script>
    <script src="~/admin/plugins/bootstrap4-duallistbox/jquery.bootstrap-duallistbox.min.js"></script>
    <script>
        $(function () {
            //Initialize Select2 Elements
            $('.select2bs4').select2({
                theme: 'bootstrap4'
            })
            //Bootstrap Duallistbox
            $('.duallistbox').bootstrapDualListbox()
        })
    </script>

}
