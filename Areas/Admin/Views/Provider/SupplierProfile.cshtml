@model DVDShops.Models.Supplier;

@{
    ViewData["Title"] = "Provider Manage";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<!-- Content -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 id="title">New Supplier</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item">
                        <a asp-area="admin" asp-controller="provider" asp-action="view">Back</a>
                    </li>
                    <li class="breadcrumb-item active">Suppliers</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content-header" id="add_supplier">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Supplier Profile</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-area="admin" asp-controller="provider" asp-action="addSupplier">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" asp-for="SupplierName" placeholder="Enter Name...">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" asp-for="SupplierEmail" placeholder="Enter Email...">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" asp-for="SupplierPhone" minlength="10" maxlength="10" placeholder="Enter Phone...">
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" asp-for="SupplierAddress" placeholder="Enter Address...">
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer d-flex justify-content-end">
                            <a class="btn btn-warning" asp-area="admin" asp-controller="provider" asp-action="view" onclick="return confirm('Are you Sure?')">CANCLE</a> &nbsp;
                            <button type="submit" class="btn btn-info">ADD</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

<section class="content-header invisible" id="edit_supplier">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Supplier Profile</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form method="post" asp-area="admin" asp-controller="provider" asp-action="editSupplier">
                        <div class="card-body">
                            <input type="hidden" asp-for="SupplierId" />
                            <div class="form-group" id="supplier_profile">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" asp-for="SupplierName" placeholder="Enter Name...">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" asp-for="SupplierEmail" placeholder="Enter Email...">
                            </div>
                            <div class="form-group">
                                <label for="phone">Phone</label>
                                <input type="text" class="form-control" id="phone" name="phone" asp-for="SupplierPhone" minlength="10" maxlength="10" placeholder="Enter Phone...">
                            </div>
                            <div class="form-group">
                                <label for="address">Address</label>
                                <input type="text" class="form-control" id="address" asp-for="SupplierAddress" placeholder="Enter Address...">
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer d-flex justify-content-end">
                            <a class="btn btn-warning" asp-area="admin" asp-controller="provider" asp-action="view" onclick="return confirm('Are you Sure?')">CANCLE</a> &nbsp;
                            <button type="submit" class="btn btn-info">SAVE</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

@section tablefooter {
    <script>
        $(document).ready(function () {
            var supplierId = '@TempData["supplierId"]';
            if (supplierId) {
                $('#add_supplier').remove();

                $('#title').text('Edit Supplier Profile');
                $('#edit_supplier').removeClass('invisible');
                $('#edit_supplier').addClass('visible');
                var name = '@TempData["supplierOldName"]';
                var email = '@TempData["supplierOldEmail"]';

                var oldName = '<input type="hidden" name="oldName" value="' + name + '">';
                var oldEmail = '<input type="hidden" name="oldEmail" value="' + email + '">';
                $('#supplier_profile').append(oldName);
                $('#supplier_profile').append(oldEmail);
            } else {
                $('#edit_supplier').remove();
            }
        });
    </script>
}


