@model DVDShops.Models.News

<h2>Delete News</h2>

<p>Are you sure you want to delete this news?</p>

<div>
    <h4>News</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.NewsId</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.NewsTitle</dd>
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">@Model.NewsImage</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.NewsContent</dd>
        <dt class="col-sm-2">Source</dt>
        <dd class="col-sm-10">@Model.NewsSource</dd>
        <dt class="col-sm-2">Publish Date</dt>
        <dd class="col-sm-10">@Model.PublishDate.ToString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="NewsId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index">Back to List</a>
    </form>
</div>
