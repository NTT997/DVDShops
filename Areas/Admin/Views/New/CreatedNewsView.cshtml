@model DVDShops.Models.News

<h2>Create News</h2>

<form asp-action="Create">
    <div class="form-group">
        <label>Title</label>
        <input asp-for="NewsTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image</label>
        <input asp-for="NewsImage" class="form-control" />
    </div>
    <div class="form-group">
        <label>Content</label>
        <textarea asp-for="NewsContent" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Source</label>
        <input asp-for="NewsSource" class="form-control" />
    </div>
    <div class="form-group">
        <label>Publish Date</label>
        <input asp-for="PublishDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
